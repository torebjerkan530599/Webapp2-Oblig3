@model Blog.Models.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Innlegg";
}

<h1>Innlegg</h1>

<div>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
            <aside>
                <a asp-action="EditPost" asp-route-id="@Model.PostId">Edit</a>
            </aside>
        </dd>

        @*<dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Created)
